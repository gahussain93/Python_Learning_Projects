def format_data(account):
    name = account["Name"]
    descr = account["Description"]
    country = account["Country"]
    return f"{account['Name']}, {account['Description']}, from {account['Country']}."


def get_random_celeb(exclude=None):
    celeb = random.choice(Celebrities)
    while celeb == exclude:
        celeb = random.choice(Celebrities)
    return celeb


def higher_lower_game():
    print(logo)
    score = 0
    game_on = True
    a = get_random_celeb()
    b = get_random_celeb(exclude=a)
    while game_on:
        a_followers = a["Follower Count"]
        b_followers = b["Follower Count"]

        print(f"Compare A: {format_data(a)}")
        print(vs)
        print(f"Against B: {format_data(b)}")

        guess = input("Who has more followers, A or B:\n").lower()

        if guess != "a" and guess != "b":
            print("You must enter either 'A' or 'B'!")
            guess = input("Who has more followers, A or B:\n").lower()
        if guess == "a" and a_followers > b_followers:
            score += 1
            print("CORRECT")
            print(f"Current score is {score}")
            b = get_random_celeb(exclude=a)
        elif guess == "b" and b_followers > a_followers:
            score += 1
            print("CORRECT")
            print(f"Your current score is {score}")
            a = b
            b = get_random_celeb(exclude=a)

        else:
            print("WRONG!")
            print(f"You guessed right {score} times.")
            break


higher_lower_game()
